{
  "policy": {
    "phases": {
      "hot": {
        "actions": {
          "set_priority": {
            "priority": 100
          },
          "rollover": {
            "max_age": "{rollover_max_age}",
            "max_size": "{rollover_max_size}",
            "max_docs": {rollover_max_docs}
          }
        }
      },
      "delete": {
        "min_age": "{delete_min_age}",
        "actions": {
          "delete": {
            "delete_searchable_snapshot": true
          }
        }
      }
    }
  }
}